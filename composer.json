{
	"name": "emergency-system",
	"description": "Helping people stay alert in the event of a biological hazard.",
	"type": "wordpress-plugin",
	"keywords": [
		"wordpress",
                "who",
		"health"
	],
	"homepage": "https://dmitrys.xyz",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Dmitry Giannopulos",
			"email": "hello@dmitrys.xyz",
			"homepage": "https://dmitrys.xyz/app/"
		}
	],
	
    "support": {
        "issues": "https://github.com/DmitrysXYZ/Emergency-System/issues"
    },
    "require": {
	"php": "^7.1.0||^7.4",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-zip": "*",
        "middlewares/cache": "^2.0",
        "tightenco/collect": "^17.19",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "php": ">=7.4",
        "friendsofphp/php-cs-fixer": "^2.3",
        "johnkary/phpunit-speedtrap": "^3.2",
        "phlak/coding-standards": "^1.1",
        "phpunit/phpunit": "^9.1",
        "psy/psysh": "^0.10",
        "vimeo/psalm": "^3.6"
    },
    "suggest": {
        "ext-apcu": "Required to use the APCu cache driver",
        "ext-memcached": "Required to use the Memcached driver",
        "ext-redis": "Required to use the Redis cache driver"
    },
        "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "vendor-dir": "app/vendor"
    },
    "scripts": {
        "serve": "php -S localhost:8080",
        "post-create-project-cmd": [
            "npm install && npm run dev",
            "cp .env.example .env"
        ]
    }
}
