{
	"name": "emergency-system",
	"description": "Helping people stay alert in the event of a biological hazard.",
	"keywords": [
		"wordpress",
                "who",
		"health"
	],
	"homepage": "https://dmitrys.xyz",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Dmitry N. Giannopulos",
			"email": "hello@dmitrys.xyz",
			"homepage": "https://dmitrys.xyz/app/"
		}
	],
	"type": "wordpress-plugin",
	"support": {
		"issues": "https://github.com/DmitrysXYZ/Emergency-System/issues",
		"forum": "https://wordpress.org/support/plugin/emergency-system/",
		"wiki": "https://github.com/DmitrysXYZ/Emergency-System/wiki",
		"source": "https://github.com/DmitrysXYZ/Emergency-System"
	},
	"require": {
		"php": "^7.1.0||^7.4",
		"composer/installers": "^1.9.0"
	},
	"require-dev": {
		"humbug/php-scoper": "^0.13.4",
		"league/oauth2-client": "2.4.1",
		"php-parallel-lint/php-console-highlighter": "^0.5",
		"php-parallel-lint/php-parallel-lint": "^1.2.0",
		"phpunit/phpunit": "^5.7",
		"psr/log": "^1.0"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
    },
        "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "vendor-dir": "app/vendor"
    },
    "scripts": {
        "serve": "php -S localhost:8080",
        "post-create-project-cmd": [
            "npm install && npm run dev",
            "cp .env.example .env"
        ]
    }
}
